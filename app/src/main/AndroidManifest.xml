<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.likingapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".LikingApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LikingAppNoBar">
        <activity android:name=".view_presenter.superhero_info.SuperheroInfoActivity" />
        <activity android:name=".view_presenter.personal_list.PersonalListActivity" />
        <activity android:name=".view_presenter.register_person.RegisterPersonActivity" />
        <activity android:name=".view_presenter.simple_api_call.SimpleAPICallActivity" />
        <activity android:name=".view_presenter.people_list.PeopleListActivity" />
        <activity android:name=".view_presenter.register_email.RegisterEmailActivity" />
        <activity android:name=".view_presenter.splash_screen.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view_presenter.loginup_register.LoginUpRegisterActivity" />
    </application>

</manifest>