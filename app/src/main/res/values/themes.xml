<resources xmlns:tools="http://schemas.android.com/tools">
    <!--    CheckBox-->
    <style name="MyCheckBoxStyle" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:textColor">@color/black</item>
        <item name="buttonTint">@color/black</item>
    </style>
    <!--    Button-->
    <style name="MyButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/nova_gray</item>
        <item name="fontFamily">@font/montserrat_semi_bold</item>
    </style>
    <!--    EditText-->
    <style name="MyEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">#f7f7f7</item>
        <item name="fontFamily">@font/montserrat_regular</item>
    </style>
    <!-- Base application theme. -->
    <style name="Theme.LikingAppNoBar" parent="Theme.AppCompat.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorOnSecondary">@color/black</item>
        <!--        FAB Color-->
        <item name="colorAccent">@color/dark_blue</item>
        <item name="android:textColor">?colorOnSecondary</item>
        <item name="android:windowBackground">?colorOnPrimary</item>
        <item name="android:textColorPrimary">?colorOnSecondary</item>
        <item name="android:textColorHint">@color/light_gray</item>
        <item name="android:checkboxStyle">@style/MyCheckBoxStyle</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>
</resources>